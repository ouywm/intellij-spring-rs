use anyhow::Context;
use spring_sqlx::{
    sqlx::{self, Row},
    ConnectPool,
};
use spring_web::get;
use spring_web::{error::Result, extractor::Component};

#[get("/version")]
async fn sqlx_request_handler(Component(pool): Component<ConnectPool>) -> Result<String> {
    let version = sqlx::query("select version() as version")
        .fetch_one(&pool)
        .await
        .context("sqlx query failed")?
        .get("version");
    Ok(version)
}
